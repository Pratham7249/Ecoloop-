<body>
<style>
  .btn-serach {
    background-color: #fe424d;
    color: #fff;
    border-radius: 25px;
    padding: 0 1rem;
  }
  .btn-serach i {
    display: inline;
    margin-right: 0.5rem;
  }
  .serach-in {
    padding: 0.5rem 3rem;
    border-radius: 25px;
    font-size: 0.9rem;
  }
</style>
<nav class="navbar navbar-expand-md bg-body-light border-bottom sticky-top">
    <div class="container-fluid">
      <a class="navbar-brand" href="/"><i class="fa-solid fa-recycle"></i></a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
        <div class="navbar-nav">
          <a class="nav-link" href="/">Waste Collection Tracking</a>
        </div>
        <div class="navbar-nav ms-auto">
          <div class="container-fluid">
            <form class="d-flex" role="search" action="/search" method="GET">
              <div id="search-results" class="search-results"></div>
              <input class="form-control me-2 serach-in" type="search" name="query" placeholder="Search " aria-label="Search" oninput="filterCountries()">
              <button class="btn btn-serach" type="submit"><i class="fa-solid fa-magnifying-glass"></i>Search</button>
            </form>
          </div>
        </div>
        <div class="navbar-nav ms-auto">
          <a class="nav-link" href="/recycle/dashboard">Waste Detection Dashboard </a>
          <a class="nav-link" href="/recycle">Report Waste</a>
          <a class="nav-link" href="/contact">Contact Us</a>
          <% if (user) { %>
              <a class="nav-link" href="/logout"><b>Logout</b></a>
          <% } else { %>
              <a class="nav-link" href="/login">Login</a>
          <% } %>

        </div>
      </div>
    </div>
</nav>
<script src="/js/search.js"></script>
</body>
